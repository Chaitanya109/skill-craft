  }

  .quiz-container{
    width:100%; max-width:700px;
    background:linear-gradient(180deg,rgba(255,255,255,0.03),rgba(0,0,0,0.04));
    padding:32px; border-radius:16px;
    box-shadow:0 10px 28px rgba(0,0,0,0.6);
  }

  h1{
    text-align:center; margin-top:0;
    font-size:30px; color:var(--accent);
  }

  #question{
    font-size:22px; margin:20px 0 14px;
  }

  .option{
    background:var(--panel);
    padding:14px; border-radius:10px;
    margin:8px 0; cursor:pointer; font-size:17px;
    border:2px solid transparent;
    transition:all .15s;
  }

  .option:hover{ 
    border-color:var(--accent);
    transform:translateY(-2px);
  }

  .option.correct{
    background:rgba(78,225,193,0.12); border-color:var(--accent);
  }
  .option.wrong{
    background:rgba(255,107,107,0.12); border-color:var(--wrong);
  }

  #nextBtn, #restartBtn{
    margin-top:20px; width:100%; padding:14px;
    border-radius:10px; border:0; cursor:pointer;
    font-size:18px; font-weight:700;
    background:linear-gradient(90deg,var(--accent),#5ffad1);
    color:#0a0a0a;
  }

  #restartBtn{
    background:transparent; border:2px solid var(--accent); color:var(--accent);
  }

  #scoreBox{
    margin-top:20px; text-align:center;
    font-size:26px; color:var(--accent); font-weight:700;
  }

  input[type="text"]{
    width:100%; padding:12px; margin-top:10px;
    background:var(--panel); border:2px solid transparent;
