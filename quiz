<body>
<div class="quiz-container">
  <h1>Quiz Game Application</h1>

  <div id="questionBox">
      <div id="question"></div>
      <div id="options"></div>
  </div>

  <button id="nextBtn" style="display:none">Next Question</button>

  <div id="scoreBox"></div>
  <button id="restartBtn" style="display:none">Restart Quiz</button>
</div>

<script>
/* -------------------------
   QUIZ QUESTION STRUCTURE
   Supports:
   - single choice
   - multi select
   - fill in the blank
---------------------------*/

const quizData = [
  {
    type: "single",
    question: "Which language runs in the browser?",
    options: ["Python", "C++", "JavaScript", "Java"],
    answer: 2
  },
  {
    type: "multi",
    question: "Select all front-end technologies:",
    options: ["HTML", "CSS", "Node.js", "React"],
    answer: [0,1,3]
  },
  {
    type: "fill",
    question: "Fill in the blank: CSS stands for ______ Style Sheets.",
    answer: "Cascading"
  },
  {
    type: "single",
    question: "Which tag is used for the largest heading in HTML?",
    options: ["<h3>", "<h1>", "<h6>", "<header>"],
    answer: 1
  }
];

let currentIndex = 0;
let score = 0;
let selectedOptions = [];

const questionEl = document.getElementById("question");
const optionsEl = document.getElementById("options");
const nextBtn = document.getElementById("nextBtn");
const scoreBox = document.getElementById("scoreBox");
const restartBtn = document.getElementById("restartBtn");

loadQuestion();

// Load Question
function loadQuestion(){
  const current = quizData[currentIndex];
  questionEl.textContent = (currentIndex+1) + ". " + current.question;
  optionsEl.innerHTML = "";

  nextBtn.style.display = "none";
  selectedOptions = [];

  if(current.type === "single"){
    current.options.forEach((opt,i)=>{
      const div = document.createElement("div");
      div.className = "option";
      div.textContent = opt;
      div.onclick = ()=> handleSingle(i);
      optionsEl.appendChild(div);
    });
  }

  else if(current.type === "multi"){
    current.options.forEach((opt,i)=>{
      const div = document.createElement("div");
      div.className = "option";
      div.textContent = opt;
      div.onclick = ()=> handleMulti(div,i);
      optionsEl.appendChild(div);
    });
  }

  else if(current.type === "fill"){
    const input = document.createElement("input");
    input.type = "text";
    input.placeholder = "Type your answer...";
    input.oninput = ()=>{ selectedOptions=[input.value]; nextBtn.style.display="block"; };
    optionsEl.appendChild(input);
  }
}

// Single-choice logic
function handleSingle(i){
  const current = quizData[currentIndex];
  const options = document.querySelectorAll(".option");

  options.forEach((opt,index)=>{
    if(index === current.answer) opt.classList.add("correct");
    else opt.classList.add("wrong");
    opt.style.pointerEvents="none";
  });

  if(i === current.answer) score++;

  nextBtn.style.display = "block";
}

// Multi-select logic
function handleMulti(div,i){
  if(selectedOptions.includes(i)){
    selectedOptions = selectedOptions.filter(x => x !== i);
    div.style.borderColor="transparent";
  } else {
    selectedOptions.push(i);
    div.style.borderColor="var(--accent)";
  }

  nextBtn.style.display = "block";
}

// Next Button
nextBtn.onclick = ()=>{
  checkMultiAnswer();
  currentIndex++;

  if(currentIndex < quizData.length){
    loadQuestion();
  } else {
    showScore();
  }
};

// Check multi-select answer
function checkMultiAnswer(){
  const current = quizData[currentIndex];
  if(current.type === "multi"){
    const correct = JSON.stringify(current.answer.sort());
    const user = JSON.stringify(selectedOptions.sort());
    if(correct === user) score++;
  }
  if(current.type === "fill"){
    if(selectedOptions[0]?.trim().toLowerCase() === current.answer.toLowerCase()) score++;
  }
}

// Show Score
function showScore(){
  document.getElementById("questionBox").style.display="none";
  nextBtn.style.display="none";

  scoreBox.textContent = `Your Score: ${score} / ${quizData.length}`;
  restartBtn.style.display = "block";
}

// Restart
restartBtn.onclick = ()=>{
  currentIndex = 0;
  score = 0;
  document.getElementById("questionBox").style.display="block";
  restartBtn.style.display="none";
  scoreBox.textContent = "";
  loadQuestion();
};
</script>
</body>
</html>
