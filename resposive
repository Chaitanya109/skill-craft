<script>
/*
  Nav behavior:
  - On scroll: add `.scrolled` to header when past threshold
  - Active link: determine which section is visible using IntersectionObserver
  - Smooth scroll for link clicks
  - Mobile menu toggle with accessible aria attributes
*/

// Elements
const header = document.getElementById('siteHeader');
const navLinks = Array.from(document.querySelectorAll('.nav-link'));
const mobileLinks = Array.from(document.querySelectorAll('.mobile-link'));
const hamburger = document.getElementById('hamburger');
const mobileMenu = document.getElementById('mobileMenu');
const sections = Array.from(document.querySelectorAll('main section[id]'));

// 1) Change header style on scroll (threshold)
const SCROLL_THRESHOLD = 40;
function onScroll() {
  if (window.scrollY > SCROLL_THRESHOLD) header.classList.add('scrolled');
  else header.classList.remove('scrolled');
}
document.addEventListener('scroll', onScroll, {passive:true});
onScroll(); // init

// 2) Smooth scroll for nav clicks (both desktop and mobile)
function smoothScrollTo(id) {
  const el = document.getElementById(id);
  if (!el) return;
  const navHeight = header.offsetHeight;
  const top = el.getBoundingClientRect().top + window.scrollY - navHeight + 12; // little offset
  window.scrollTo({ top, behavior: 'smooth' });
  // close mobile menu if open
  closeMobileMenu();
}

navLinks.forEach(link => {
  link.addEventListener('click', (e) => {
    e.preventDefault();
    const target = link.dataset.target;
    smoothScrollTo(target);
    // set focus to section for keyboard users after scroll finishes (approx)
    setTimeout(()=> {
      const sec = document.getElementById(target);
      if (sec) sec.focus({preventScroll:true});
    }, 500);
  });
});
mobileLinks.forEach(link => {
  link.addEventListener('click', (e) => {
    e.preventDefault();
    const target = link.dataset.target;
    smoothScrollTo(target);
  });
});

// 3) Mobile menu toggle
function openMobileMenu() {
  mobileMenu.classList.add('open');
  mobileMenu.style.display = 'block';
  hamburger.classList.add('open');
  hamburger.setAttribute('aria-expanded','true');
  mobileMenu.setAttribute('aria-hidden','false');
  // trap focus: move focus to first mobile link
  setTimeout(() => {
    const first = mobileMenu.querySelector('a');
    if (first) first.focus();
  }, 40);
}
function closeMobileMenu() {
  mobileMenu.classList.remove('open');
  mobileMenu.style.display = 'none';
  hamburger.classList.remove('open');
  hamburger.setAttribute('aria-expanded','false');
  mobileMenu.setAttribute('aria-hidden','true');
  hamburger.focus();
}
hamburger.addEventListener('click', () => {
  const expanded = hamburger.getAttribute('aria-expanded') === 'true';
  if (expanded) closeMobileMenu(); else openMobileMenu();
});

// close mobile menu on Escape
document.addEventListener('keydown', (ev) => {
  if (ev.key === 'Escape') {
    closeMobileMenu();
  }
});

// 4) Active link on scroll — use IntersectionObserver
const observerOptions = {
  root: null,
  rootMargin: '0px 0px -55% 0px', // when section passes mid-ish viewport
  threshold: 0
};

function onIntersection(entries) {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      const id = entry.target.id;
      setActiveLink(id);
    }
  });
}

const observer = new IntersectionObserver(onIntersection, observerOptions);
sections.forEach(sec => observer.observe(sec));

function setActiveLink(id) {
  navLinks.forEach(a => a.classList.toggle('active', a.dataset.target === id));
  mobileLinks.forEach(a => a.classList.toggle('active', a.dataset.target === id));
}

// 5) Improve hover: add a subtle animation via JS if needed (CSS handles hover already)

// 6) Accessibility: make nav links focusable and keyboard friendly (they are anchors)

// 7) Ensure header shrinks immediately when focusing a section via keyboard
// (no extra code required — scrolled class is based on scroll position)

// Initial highlight
// If page loads with hash, scroll into view properly
if (window.location.hash) {
  const hash = window.location.hash.slice(1);
  setTimeout(() => smoothScrollTo(hash), 10);
}

// Optionally: update URL hash as user navigates (without jump)
let updateHashTimeout = null;
function updateHash(id) {
  if (!id) return;
  // debounce updates to avoid too many history entries
  if (updateHashTimeout) clearTimeout(updateHashTimeout);
  updateHashTimeout = setTimeout(() => {
    history.replaceState(null, '', '#' + id);
  }, 200);
}

// Enhance intersection handler to update URL
function onIntersectionWithHash(entries) {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      const id = entry.target.id;
      setActiveLink(id);
      updateHash(id);
    }
  });
}
const observer2 = new IntersectionObserver(onIntersectionWithHash, observerOptions);
sections.forEach(sec => observer2.observe(sec));

</script>
</body>
</html>
