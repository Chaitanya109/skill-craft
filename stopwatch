<body>
  <div class="app" role="application" aria-label="Stopwatch web application">
    <div class="panel">
      <div>
        <div class="small" style="text-align:center">Task 02 • Stopwatch Web Application</div>
        <div id="display" class="time" aria-live="polite">00:00.000</div>
        <div class="meta">
          <div>State: <span id="stateText">Stopped</span></div>
          <div>Saved laps: <span id="lapCount">0</span></div>
        </div>
      </div>

      <div>
        <div class="controls" role="group" aria-label="stopwatch controls">
          <button id="startPauseBtn" class="primary" aria-pressed="false">Start</button>
          <button id="lapBtn" class="ghost" disabled>Lap</button>
          <button id="resetBtn" class="danger" disabled>Reset</button>
        </div>

        <div class="footer-note">
          Keyboard: Space = Start/Pause • L = Lap • R = Reset
        </div>
      </div>
    </div>

    <aside class="side" aria-label="Laps">
      <h3>Laps</h3>
      <div class="laps" id="lapsContainer" role="list" aria-live="polite">
        <div class="empty" id="noLaps">No laps yet — press "Lap" or hit L</div>
      </div>

      <div style="display:flex;gap:8px;align-items:center">
        <div class="small">Export:</div>
        <div class="actions" style="margin-left:auto">
          <button id="copyBtn" class="ghost" disabled>Copy CSV</button>
          <button id="downloadBtn" class="ghost" disabled>Download CSV</button>
        </div>
      </div>
    </aside>
  </div>

<script>
/*
  Accurate stopwatch using performance.now()
  Features:
  - Start / Pause toggle (requestAnimationFrame)
  - Reset (clear laps, time)
  - Lap capture (records time at moment)
  - Keyboard shortcuts: Space, L, R
  - Export laps to CSV (copy to clipboard + download)
*/

(function(){
  // Elements
  const display = document.getElementById('display');
  const startPauseBtn = document.getElementById('startPauseBtn');
  const lapBtn = document.getElementById('lapBtn');
  const resetBtn = document.getElementById('resetBtn');
  const lapsContainer = document.getElementById('lapsContainer');
  const noLaps = document.getElementById('noLaps');
  const lapCountEl = document.getElementById('lapCount');
  const stateText = document.getElementById('stateText');
  const copyBtn = document.getElementById('copyBtn');
  const downloadBtn = document.getElementById('downloadBtn');

  // Timing state
  let running = false;
  let rafId = null;
  let tStart = 0;           // timestamp when current run started (performance.now())
  let storedElapsed = 0;    // millis already elapsed before current run (paused time)
  let laps = [];            // array of elapsed ms snapshots

  // Format ms -> mm:ss.mmm
  function fmt(ms) {
    // ms is number (float) in milliseconds
    const totalMs = Math.floor(ms);
    const minutes = Math.floor(totalMs / 60000);
    const seconds = Math.floor((totalMs % 60000) / 1000);
    const mill = totalMs % 1000;
    const mm = String(minutes).padStart(2,'0');
    const ss = String(seconds).padStart(2,'0');
    const mmm = String(mill).padStart(3,'0');
    return `${mm}:${ss}.${mmm}`;
  }

  function getElapsed() {
    if (running) {
      return storedElapsed + (performance.now() - tStart);
    } else {
      return storedElapsed;
    }
  }

  function render() {
    const ms = getElapsed();
    display.textContent = fmt(ms);
    // loop
    rafId = requestAnimationFrame(render);
  }

  function start() {
    if (running) return;
    running = true;
    tStart = performance.now();
    startPauseBtn.textContent = 'Pause';
    startPauseBtn.setAttribute('aria-pressed','true');
    lapBtn.disabled = false;
    resetBtn.disabled = false;
    stateText.textContent = 'Running';
    // start updating via rAF
    cancelAnimationFrame(rafId);
    rafId = requestAnimationFrame(render);
  }

  function pause() {
    if (!running) return;
    running = false;
    // accumulate elapsed
    storedElapsed += performance.now() - tStart;
    cancelAnimationFrame(rafId);
    startPauseBtn.textContent = 'Start';
    startPauseBtn.setAttribute('aria-pressed','false');
    stateText.textContent = 'Paused';
  }

  function reset() {
    running = false;
    cancelAnimationFrame(rafId);
    tStart = 0;
    storedElapsed = 0;
    laps = [];
    display.textContent = '00:00.000';
    startPauseBtn.textContent = 'Start';
    startPauseBtn.setAttribute('aria-pressed','false');
    lapBtn.disabled = true;
    resetBtn.disabled = true;
    copyBtn.disabled = true;
    downloadBtn.disabled = true;
    lapCountEl.textContent = '0';
    stateText.textContent = 'Stopped';
    // clear laps UI
    lapsContainer.innerHTML = '';
    lapsContainer.appendChild(noLaps);
  }

  function recordLap() {
    const ms = getElapsed();
    // store lap time in ms
    laps.unshift(ms); // newest first
    renderLaps();
    lapCountEl.textContent = String(laps.length);
    copyBtn.disabled = false;
    downloadBtn.disabled = false;
  }

  function renderLaps() {
    lapsContainer.innerHTML = '';
    if (laps.length === 0) {
      lapsContainer.appendChild(noLaps);
      return;
    }
    // build rows: Lap 1 = most recent
    for (let i = 0; i < laps.length; i++) {
      const li = document.createElement('div');
      li.className = 'lap-row';
      const lapNum = document.createElement('div');
      lapNum.innerHTML = `<div class="small">Lap ${laps.length - i}</div><strong>${fmt(laps[i])}</strong>`;
      const diff = document.createElement('div');
      diff.className = 'small';
      // compute split/delta relative to previous lap (older)
      let delta = laps[i];
      if (i > 0) delta = Math.abs(laps[i] - laps[i-1]);
      diff.textContent = `Δ ${fmt(delta)}`;
      li.appendChild(lapNum);
      li.appendChild(diff);
      lapsContainer.appendChild(li);
    }
  }

  // Exports CSV
  function lapsToCSV() {
    // CSV header & rows (Lap Number, Time(ms), Formatted Time)
    const rows = [['Lap','Time_ms','Time_formatted']];
    for (let i = 0; i < laps.length; i++) {
      const lapNo = laps.length - i; // 1-based descending
      rows.push([String(lapNo), String(Math.round(laps[i])), fmt(laps[i])]);
    }
    return rows.map(r => r.map(c => `"${String(c).replace(/"/g,'""')}"`).join(',')).join('\n');
  }

  async function copyCSVToClipboard() {
    const csv = lapsToCSV();
    try {
      await navigator.clipboard.writeText(csv);
      copyBtn.textContent = 'Copied!';
      setTimeout(()=> copyBtn.textContent = 'Copy CSV', 1200);
    } catch(e) {
      copyBtn.textContent = 'Copy Failed';
      setTimeout(()=> copyBtn.textContent = 'Copy CSV', 1200);
      console.warn('Clipboard copy failed', e);
    }
  }

  function downloadCSV() {
    const csv = lapsToCSV();
    const blob = new Blob([csv], {type: 'text/csv;charset=utf-8;'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `stopwatch_laps_${new Date().toISOString().slice(0,19).replace(/[:T]/g,'-')}.csv`;
    document.body.appendChild(a);
    a.click();
    a.remove();
    URL.revokeObjectURL(url);
  }

  // Events
  startPauseBtn.addEventListener('click', ()=>{
    if (!running) start();
    else pause();
  });

  lapBtn.addEventListener('click', ()=>{
    if (!running && storedElapsed === 0) return;
    recordLap();
  });

  resetBtn.addEventListener('click', reset);

  copyBtn.addEventListener('click', copyCSVToClipboard);
  downloadBtn.addEventListener('click', downloadCSV);

  // keyboard shortcuts
  window.addEventListener('keydown', (ev) => {
    const tag = document.activeElement && document.activeElement.tagName;
    // avoid conflicts when typing in an input (none here but safe)
    if (tag === 'INPUT' || tag === 'TEXTAREA') return;
    if (ev.code === 'Space') {
      ev.preventDefault();
      if (!running) start(); else pause();
    } else if (ev.key === 'l' || ev.key === 'L') {
      if (!lapBtn.disabled) recordLap();
    } else if (ev.key === 'r' || ev.key === 'R') {
      reset();
    }
  });

  // initialize
  reset();
})();
</script>
</body>
</html>
